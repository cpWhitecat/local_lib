extends layout

block content

  h1 Author: #{author_name.name}
  p #{author_name.lifeSpanTime}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
    each book in books
      dt
        a(href=book.url) #{book.title}
      dd #{book.summary}

    else
      p This author has no books.

  hr
  p
    a(href=author_name.url+'/delete') Delete author
  p
    a(href=author_name.url+'/update') Update author